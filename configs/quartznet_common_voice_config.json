{
  "name": "quartznet_common_voice_config",
  "overfit": false,
  "n_gpu": 2,
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "sample_rate": 22050,
        "n_mels": 64
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "GaussianNoiseAugmentation",
        "args": {
          "std": 0.025
        }
      },
      {
        "type": "TimeStretchingAugmentation",
        "args": {
          "stretch": "random"
        }
      },
      {
        "type": "PitchShiftingAugmentation",
        "args": {
          "sample_rate": 22050,
          "n_steps": "random"
        }
      },
      {
        "type": "VolumeAugmentation",
        "args": {
          "gain": "random"
        }
      }
    ],
    "spectrogram": [
      {
        "type": "SpectAugmentation",
        "args": {
          "n_freq_masks": 2,
          "n_time_masks": 2
        }
      }
    ]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 64,
      "hidden_channels": 256,
      "B": 5,
      "S": 3,
      "R": 5,
      "kernel_sizes_for_blocks": [33, 39, 51, 63, 75]
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "MozillaCommonVoice",
          "args": {
            "part": "train"
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "MozillaCommonVoice",
          "args": {
            "part": "val"
          }
        }
      ]
    },
    "test": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "MozillaCommonVoice",
          "args": {
            "part": "test"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 500,
      "gamma": 0.99
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}