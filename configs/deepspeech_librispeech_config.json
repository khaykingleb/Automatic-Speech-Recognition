{
  "name": "deepspeech_librispeech_config",
  "is_first_to_train_model": false,
  "model_path": "trained_models/deepspeech_librispeech.pth",
  "previous_model_path": "trained_models/deepspeech_ljspeech.pth",
  "overfit": false,
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050,
    "spectrogram_normalization": true,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "sample_rate": 22050,
        "n_mels": 64
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "GaussianNoiseAugmentation",
        "args": {
          "std": 0.025
        }
      },
      {
        "type": "TimeStretchingAugmentation",
        "args": {
          "stretch": "random"
        }
      },
      {
        "type": "PitchShiftingAugmentation",
        "args": {
          "sample_rate": 22050,
          "n_steps": "random"
        }
      },
      {
        "type": "VolumeAugmentation",
        "args": {
          "gain": "random"
        }
      }
    ],
    "spectrogram": [
      {
        "type": "SpectAugmentation",
        "args": {
          "n_freq_masks": 2,
          "n_time_masks": 2
        }
      }
    ]
  },
  "arch": {
    "type": "Deepspeech",
    "args": {
      "n_feats": 64,
      "fc_hidden": 512,
      "fc_dropout": 0.1,
      "gru_hidden": 512,
      "gru_num_layers": 3
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train_all",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    },
    "test": {
      "batch_size": 32,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "CosineAnnealingWarmRestarts",
    "args": {
      "T_0": 2000
    }
  },
  "trainer": {
    "epochs": 150,
    "save_dir": "ASR/saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 200,
    "grad_norm_clip": 10
  }
}